fontSize = 15px

activeColor = #56a6e5;
bgColor = #f3f2f2;

headerHeight = 10%;
mainHeight = 70%;
linkSectionHeight = 20%;

//NBA Game Box
initialNBAGameOffset = 5%;
NBAGameSpacing = 1em;
NBAGameBoxHeight = 22em;
NBAGameBoxRatio = 1.2;

.App 
  text-align center
  width 100%
  height 100%
  position relative
  background-color bgColor
  font-size fontSize
  
header
  height headerHeight
  
main
  height mainHeight

.timeDisplay
  font-weight 600
  color grey
  position absolute
  top 2em
  left initialNBAGameOffset
  
.linkSection
  width 100%
  height linkSectionHeight
  position absolute
  bottom 0
  .linkItem
    margin 5px
    padding 5px
    height auto
    width calc((100% / 3) - 20%)
    display inline-block
    cursor pointer
    .circleContainer
      background-color #FFF
      height 5em
      border-radius 50%
      display block
      margin auto
      margin-bottom 0.5em
      width 5em
      border 3px solid bgColor
      img
        width 3em
        display block
        height auto 
        margin auto
        position relative
        left 0
        right 0
        top 0.9em
    span
      visibility hidden
  .active
    .circleContainer
      border 3px solid activeColor
    span
      visibility visible
      color activeColor
      
.nbaContainers
  height 100%
  width 100%
  overflow-x: scroll;
  overflow-y: hidden;
  white-space: nowrap;
  .nbaGame
    height NBAGameBoxHeight
    width "calc(%s * %s)" % (NBAGameBoxHeight NBAGameBoxRatio)
    margin-left NBAGameSpacing
    margin-top 5em
    background-color white
    display inline-block
    &:first-child
      margin-left initialNBAGameOffset
    &:last-child
      margin-right NBAGameSpacing
    .team
      width 50%
      height 100%
      float left
      img
        height auto
        width 100%
        display block
      span
        display block
        



    

